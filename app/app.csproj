    <AssemblyName>minGPT</AssemblyName>
    <RootNamespace>LostTech.Torch.NN</RootNamespace>
    <LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <IsPackable>false</IsPackable>
